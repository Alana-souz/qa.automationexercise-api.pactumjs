{
  "name": "qa-automationexercise-api-pactumjs",
  "version": "1.0.0",
  "type": "module",
  "description": "Automação de testes de API com PactumJS, Joi e Mochawesome – Validação de contratos e testes funcionais.",
  "main": "pactum.config.js",
  "author": "Alana Reis",
  "license": "ISC",

  "scripts": {
    "test": "npm run test:all",
    "test:functional": "mocha ./test/api/**/*.test.js --timeout 20000 --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=index,quiet=true",
    "test:contract": "mocha ./test/contrato/**/*.test.js --timeout 20000 --reporter mochawesome --reporter-options reportDir=mochawesome-report,reportFilename=index,quiet=true",
    "test:all": "npm run test:functional && npm run test:contract",
    "test:ci": "npm run test:all || true"
  },

  "devDependencies": {
    "chai": "^5.1.1",
    "dotenv": "^17.2.3",
    "joi": "^17.13.3",
    "mocha": "^11.0.1",
    "mochawesome": "^7.1.4",
    "pactum": "^3.8.0"
  }
}
